{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "KrakenD - API Gateway",
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "endpoints": [
        {
            "endpoint": "/api/v2/register",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/account",
                       "encoding": "json",
                    "sd": "static",
                    "method": "POST",
                    "host": [
                        "http://account:5003"
                    ],
                    "disable_host_sanitize": false,
                    "deny": [
                        "password",
                        "updated_at",
                        "created_at"
                    ],
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/api/v2/login",
            "method": "POST",
            "extra_config": {
                "auth/signer": {
                    "alg": "HS256",
                    "kid": "sim2",
                    "keys_to_sign": [
                        "access_token",
                        "refresh_token"
                    ],
                    "jwk_local_path": "symmetric.json",
                    "disable_jwk_security": true
                }
            },
            "backend": [
                {
                    "url_pattern": "/obtain",
                    "method": "POST",
                    "host": [
                        "http://auth:5004"
                    ],
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        }
    ]
}
