{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "KrakenD - API Gateway",
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "endpoints": [
        {
            "endpoint": "/api/v2/account",
            "input_headers": [
                "Cookie"
            ],
            "method": "GET",
            "output_encoding": "no-op",
            "backend": [
                {
                    "url_pattern": "/identity",
                    "host": [
                        "http://auth:9040"
                    ],
                    "encoding": "no-op",
                    "sd": "static",
                    "method": "GET",
                    "disable_host_sanitize": false,
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        }
    ]
}